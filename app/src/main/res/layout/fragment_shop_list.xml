<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.mandyshoes.shoelisting.viewModel.ShopListViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shoes_list_title"
                android:textColor="@color/black"
                android:textSize="32sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/high_heels"
                android:layout_width="341dp"
                android:layout_height="189dp"
                android:src="@drawable/high_heels"
                android:onClick="@{() -> viewModel.setArgument(1)}" />

            <ImageView
                android:id="@+id/tenis"
                android:layout_width="424dp"
                android:layout_height="291dp"
                android:src="@mipmap/tenis_foreground"
                android:onClick="@{() -> viewModel.setArgument(2)}" />

            <ImageView
                android:id="@+id/green_tenis"
                android:layout_width="424dp"
                android:layout_height="291dp"
                android:src="@mipmap/green_tenis_foreground"
                android:onClick="@{() -> viewModel.setArgument(3)}" />
        </LinearLayout>
    </ScrollView>
</layout>
